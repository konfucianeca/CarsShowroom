@using CarsShowroom.Core.Models.Home
@model IEnumerable<VehicleIndexServiceModel>
@{
    ViewData["Title"] = "Home Page";
    var vehicles = Model.ToList();
}

@if (!vehicles.Any())
{
    <div class="mt-4 p-5 bg-light">
        <h1 class="display-4">You just joined the Best Online Used Vehicles Showroom!</h1>
        <p class="lead">
            There are no vehicles for sale, so be a pioneer and add one!
        </p>
        <hr class="my-4">
        <p class="lead">
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <a asp-controller="House" asp-action="Add" class="btn btn-primary btn-lg"
                   role="button">Add Vehicle</a>
            }
        </p>
    </div>
}

<div>
    @for(int i = 0; i < vehicles.Count; i++)
    {
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src=@vehicles[i].ImageUrl class="img-fluid rounded-start" alt="Vehicle Image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@vehicles[i].Maker</h5>
                        <p class="card-text"><strong>Model: </strong>@vehicles[i].Model</p>
                        <p class="card-text"><strong>Year of production: </strong>@vehicles[i].YearOfProduction</p>
                        <p class="card-text"><strong>Price: </strong>@vehicles[i].Price EUR</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


